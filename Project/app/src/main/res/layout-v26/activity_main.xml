<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineTopActivityMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1">

    </androidx.constraintlayout.widget.Guideline>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineBottomActivityMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineLeftActivityMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineRightActivityMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineMidActivityMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3">

    </androidx.constraintlayout.widget.Guideline>

    <ImageView
        android:id="@+id/imgLogoLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_userplayer"
        app:layout_constraintBottom_toTopOf="@id/lineMidActivityMain"
        app:layout_constraintEnd_toStartOf="@id/lineRightActivityMain"
        app:layout_constraintStart_toStartOf="@id/lineLeftActivityMain"
        app:layout_constraintTop_toBottomOf="@id/lineTopActivityMain">
    </ImageView>

    <LinearLayout
        android:id="@+id/FormLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/lineMidActivityMain"
        app:layout_constraintStart_toStartOf="@id/lineLeftActivityMain"
        app:layout_constraintBottom_toTopOf="@id/lineBottomActivityMain"
        app:layout_constraintEnd_toStartOf="@id/lineRightActivityMain">
        <Button
            android:id="@+id/btnManageAccountLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/animationbuttongreen"
            android:padding="5dp"
            android:text="@string/manage_account"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">
        </Button>

        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/animationbuttonblue"
            android:padding="5dp"
            android:text="@string/new_game"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">
        </Button>
        <Button
            android:id="@+id/btnPlayHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/animationpurple"
            android:padding="5dp"
            android:text="@string/history"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">
        </Button>
        <Button
            android:id="@+id/btnRankPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/animationbuttonpink"
            android:padding="5dp"
            android:text="@string/rank"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">
        </Button>

        <Button
            android:id="@+id/btnBuyCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="@drawable/animationbuttonyellow"
            android:padding="5dp"
            android:text="@string/buy_credit"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">
        </Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>