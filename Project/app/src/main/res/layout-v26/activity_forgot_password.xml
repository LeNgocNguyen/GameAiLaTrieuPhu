<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.ForgotActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineTopForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineLeftForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineRightForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineBottomForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8">

    </androidx.constraintlayout.widget.Guideline>

    <LinearLayout
        android:id="@+id/imgLogoForgot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toTopOf="@id/lineBottomForgotPassword"
        app:layout_constraintEnd_toEndOf="@id/lineRightForgotPassword"
        app:layout_constraintStart_toStartOf="@id/lineLeftForgotPassword"
        app:layout_constraintTop_toBottomOf="@id/lineTopForgotPassword">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:padding="50dp"
            android:src="@drawable/ic_user_player"
            app:layout_constraintStart_toEndOf="@id/lineRightForgotPassword"
            app:layout_constraintStart_toStartOf="@id/lineLeftForgotPassword"
            app:layout_constraintTop_toBottomOf="@id/lineBottomForgotPassword"
            app:layout_constraintTop_toTopOf="@id/lineTopForgotPassword"
            android:contentDescription="@string/todo">

        </ImageView>

        <EditText
            android:id="@+id/edtUserNameForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="2"
            android:background="@drawable/radius_user_edit_text"
            android:hint="@string/hint_user_login"
            android:inputType="textCapSentences"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:ignore="TextFields"
            android:autofillHints="">

        </EditText>

        <EditText
            android:id="@+id/edtEmailForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/radius_user_edit_text"
            android:hint="@string/email"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:inputType="textCapSentences"
            tools:ignore="TextFields">

        </EditText>

        <Button
            android:id="@+id/btnPasswordRetrieval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/animation_button_blue"
            android:gravity="center"
            android:text="@string/password_retrieval"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">

        </Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>